<div class="row justify-content-center">
  <h1 class"h1">Zonas</h1>
</div>
<br>
<div>
  <div>
      <table class="table table-striped">
        <thead class="thead-dark">
          <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Pedidos a Entregar</th>
          </tr>
        </thead>
        <tbody>
          <% if @areas.present? %>
            <% @areas.each do |area| %>
              <tr>
                <td>
                  <%= link_to area.name, area %>
                </td>
                <td> <%= area.not_delivered.count %> </td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    <div>
      <% if policy(Client).new? %>
        <%= link_to 'Nueva Zona', new_area_path, class: "btn btn-outline-primary" %>
      <% end %>
    </div>
  </div>
</div>
