<% if @orders.present? %>
<% x=0 %>
  <% @orders.each do |order| %>
    <tr>
      <th scope="row"><%= x+=1 %></th>

      <td> <%= link_to order.client.name, order.client %> </td>
      <td> <%= order.direction %> </td>
      <td> <%= order.created_at.to_date.to_formatted_s(:iso8601) %> </td>

      <td><%= check_box "order", "done?", {:checked => order.done?, :disabled => true}%></td>
      <td><%= check_box "order", "delivered?", {:checked => order.delivered?, :disabled => true}%></td>
      <td><%= check_box "order", "invoiced?", {:checked => order.invoiced?, :disabled => true}%></td>

      <td>
        <%= link_to "Ver", order_path(order) %>
      </td>
    </tr>
  <% end %>
<% end %>
