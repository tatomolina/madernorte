<tr class="nested-fields">
  <td> <%= link_to_remove_association "X", f, class: "btn btn-outline-danger" %> </td>
  <td> <%= f.input :quantity,                   label: false, class: "form-control" %> </td>
  <td> <%= f.input :description,                label: false, class: "form-control" %> </td>
  <td> <%= f.input :details,                    label: false, class: "form-control" %> </td>
  <td class="bools"> <%= f.input :invoiced,    as: :boolean,    label: false  %> </td>
  <td class="bools"> <%= f.input :payed,       as: :boolean,    label: false  %> </td>
  <td class="bools"> <%= f.association :article_state, label: false, class: "form-control" %> </td>
</tr>
