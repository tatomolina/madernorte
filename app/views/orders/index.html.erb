<div class="row justify-content-center">
  <h1 class"h1">Pedidos</h1>
</div>
<br>
<div>
  <div>
      <table class="table table-bordered">
        <thead class="thead-dark">
          <tr>
            <th scope="col">Cliente</th>
            <th scope="col">Zona</th>
            <th scope="col">Fecha</th>
            <th scope="col">Procesado</th>
            <th scope="col">Entregado</th>
            <th scope="col">Facturado</th>
            <th scope="col">Pagado</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% if @orders.present? %>
            <% @orders.each do |order| %>
              <tr>
                <% if (order.common_client.present? && order.client.name == "CONSUMIDOR FINAL") %>
                  <td> <%= link_to order.common_client, order.client %> </td>
                <% else %>
                  <td> <%= link_to order.client.name, order.client %> </td>
                <% end %>
                <td> <%= order.area.name %> </td>
                <td> <%= order.created_at.to_date.to_formatted_s(:iso8601) %> </td>

                <td><%= check_box "order", "done?", {:checked => order.done?, :disabled => true}%></td>
                <td><%= check_box "order", "delivered?", {:checked => order.delivered?, :disabled => true}%></td>
                <td><%= check_box "order", "invoiced?", {:checked => order.invoiced?, :disabled => true}%></td>
                <td><%= check_box "order", "payed?", {:checked => order.payed?, :disabled => true}%></td>

                <td><%= link_to "Ver", order_path(order), class: "btn btn-outline-primary" %></td>
              </tr>
            <% end %>
          <% end %>

        </tbody>
      </table>
      <div class="row justify-content-center">
        <%= paginate @orders %>
      </div>
  </div>
</div>
